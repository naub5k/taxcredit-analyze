{
  "routes": [
    {
      "route": "/static/*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "*.js",
      "headers": {
        "content-type": "application/javascript"
      }
    },
    {
      "route": "*.css",
      "headers": {
        "content-type": "text/css"
      }
    },
    {
      "route": "*.json",
      "headers": {
        "content-type": "application/json"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/static/*",
      "*.js",
      "*.css", 
      "*.json",
      "*.png",
      "*.jpg",
      "*.ico",
      "*.svg"
    ]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "application/javascript",
    ".css": "text/css",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".jpeg": "image/jpeg",
    ".gif": "image/gif",
    ".ico": "image/x-icon",
    ".svg": "image/svg+xml"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  }
} 